<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/margin_2x"
    android:layout_marginStart="@dimen/margin_2x"
    android:layout_marginEnd="@dimen/margin_2x"
    app:cardCornerRadius="@dimen/margin_1.5x"
    android:background="@color/white"
    android:backgroundTint="@color/white"
    app:cardElevation="3dp"
    app:contentPadding="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/margin_1.5x">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pin_textView"
            android:textSize="@dimen/size_3x"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@drawable/rounded_license_plate"
            android:padding="1dp"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/firstName_textView"
            android:padding="1dp"
            android:textSize="@dimen/size_2x"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/pin_textView"
            app:layout_constraintStart_toStartOf="@id/pin_textView"
            app:layout_constraintEnd_toEndOf="@id/pin_textView"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/middleName_textView"
            android:padding="1dp"
            android:textSize="@dimen/size_2x"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/firstName_textView"
            app:layout_constraintStart_toStartOf="@id/firstName_textView"
            app:layout_constraintEnd_toEndOf="@id/firstName_textView"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/lastName_textView"
            android:padding="1dp"
            android:textSize="@dimen/size_2x"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/middleName_textView"
            app:layout_constraintStart_toStartOf="@id/middleName_textView"
            app:layout_constraintEnd_toEndOf="@id/middleName_textView"/>
        <ImageView
            android:id="@+id/edit_client"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="center"
            android:src="@drawable/edit_red"
            app:layout_constraintTop_toBottomOf="@id/lastName_textView"
            app:layout_constraintEnd_toEndOf="@id/lastName_textView" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>