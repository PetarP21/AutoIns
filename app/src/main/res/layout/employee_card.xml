<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/margin_2x"
    android:layout_marginStart="@dimen/margin_2x"
    android:layout_marginEnd="@dimen/margin_2x"
    app:cardCornerRadius="@dimen/margin_1.5x"
    android:background="@color/white"
    android:backgroundTint="@color/white"
    app:cardElevation="3dp"
    app:contentPadding="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/margin_1.5x">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nickname_textView_employee"
            android:textSize="@dimen/size_3x"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@drawable/rounded_license_plate"
            android:padding="1dp"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/firstname_textView_employee"
            android:padding="1dp"
            android:textSize="@dimen/size_2x"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/nickname_textView_employee"
            app:layout_constraintStart_toStartOf="@id/nickname_textView_employee"
            app:layout_constraintEnd_toEndOf="@id/nickname_textView_employee"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/middleName_textView_employee"
            android:padding="1dp"
            android:textSize="@dimen/size_2x"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/firstname_textView_employee"
            app:layout_constraintStart_toStartOf="@id/firstname_textView_employee"
            app:layout_constraintEnd_toEndOf="@id/firstname_textView_employee"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/lastName_textView_employee"
            android:padding="1dp"
            android:textSize="@dimen/size_2x"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/middleName_textView_employee"
            app:layout_constraintStart_toStartOf="@id/middleName_textView_employee"
            app:layout_constraintEnd_toEndOf="@id/middleName_textView_employee"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/email_textView_employee"
            android:padding="1dp"
            android:textSize="@dimen/size_2x"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/lastName_textView_employee"
            app:layout_constraintStart_toStartOf="@id/lastName_textView_employee"
            app:layout_constraintEnd_toEndOf="@id/lastName_textView_employee"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/position_textView_employee"
            android:padding="1dp"
            android:textSize="@dimen/size_2x"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/email_textView_employee"
            app:layout_constraintStart_toStartOf="@id/email_textView_employee"
            app:layout_constraintEnd_toEndOf="@id/email_textView_employee"/>
        <ImageView
            android:id="@+id/update_employee"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="center"
            android:src="@drawable/edit_red"
            app:layout_constraintTop_toBottomOf="@id/position_textView_employee"
            app:layout_constraintStart_toStartOf="@id/position_textView_employee" />
        <ImageView
            android:id="@+id/delete_employee"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="center"
            android:src="@drawable/delete_red"
            app:layout_constraintTop_toBottomOf="@id/position_textView_employee"
            app:layout_constraintEnd_toEndOf="@id/position_textView_employee" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>